{
    "manifest_version": 3,
    "name": "eProbe - Automação eProc TJSC",
    "version": "1.0.1",
    "description": "Extensão para servidores do TJSC: detecta documentos no eProc, extrai texto, organiza localizadores e facilita resumos com IA.",
    "author": "Alexandre Claudino Simas Santos",
    "homepage_url": "https://e-probe.vercel.app/",
    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "clipboardWrite"
    ],
    "host_permissions": [
        "https://eproc1g.tjsc.jus.br/*",
        "https://eproc2g.tjsc.jus.br/*",
        "https://fonts.googleapis.com/*",
        "https://fonts.gstatic.com/*",
        "https://api.perplexity.ai/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://eproc1g.tjsc.jus.br/*",
                "https://eproc2g.tjsc.jus.br/*"
            ],
            "js": [
                "src/main.js",
                "src/themeApply.js",
                "src/semanticKernel.js"
            ],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_popup": "src/popup.html",
        "default_title": "eProbe - Automação eproc",
        "default_icon": {
            "16": "assets/128x.png",
            "32": "assets/128x.png",
            "48": "assets/128x.png",
            "128": "assets/128x.png"
        }
    },
    "icons": {
        "16": "assets/16x.png",
        "40": "assets/40x.png",
        "48": "assets/48x.png",
        "128": "assets/128x.png",
        "160": "assets/160x.png",
        "400": "assets/400x.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "assets/icons.css",
                "assets/16x.png",
                "assets/40x.png",
                "assets/48x.png",
                "assets/128x.png",
                "assets/160x.png",
                "assets/400x.png",
                "src/material-icons.css",
                "src/semanticKernel.js"
            ],
            "matches": [
                "https://eproc1g.tjsc.jus.br/*",
                "https://eproc2g.tjsc.jus.br/*"
            ]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}