{
    "manifest_version": 3,
    "name": "eProbe - Automação ePROC",
    "version": "2.0.0",
    "description": "Automação completa: detecta, abre, extrai e envia SENT1 para ChatGPT automaticamente",

    "permissions": ["activeTab", "storage", "tabs", "clipboardWrite"],

    "host_permissions": [
        "https://eproc1g.tjsc.jus.br/*",
        "https://eproc2g.tjsc.jus.br/*",
        "https://chatgpt.com/*",
        "https://fonts.googleapis.com/*",
        "https://fonts.gstatic.com/*"
    ],

    "content_scripts": [
        {
            "matches": [
                "https://eproc1g.tjsc.jus.br/*",
                "https://eproc2g.tjsc.jus.br/*"
            ],
            "js": ["src/main.js"],
            "run_at": "document_end"
        }
    ],

    "action": {
        "default_popup": "src/popup.html",
        "default_title": "eProbe - automação"
    },

    "icons": {
        "16": "src/icon16.png",
        "48": "src/icon48.png",
        "128": "src/icon128.png"
    },

    "web_accessible_resources": [
        {
            "resources": ["src/*"],
            "matches": [
                "https://eproc1g.tjsc.jus.br/*",
                "https://eproc2g.tjsc.jus.br/*"
            ]
        }
    ]
}
