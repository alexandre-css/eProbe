{
    "manifest_version": 3,
    "name": "eProbe - Automação ePROC",
    "version": "2.0.1",
    "description": "Extensão para advogados e servidores do TJSC: detecta automaticamente documentos SENT1 e INIC1 no eProc, extrai texto e facilita a criação de resumos para capa do processo digital.",
    "author": "eProbe Team",
    "homepage_url": "https://github.com/seu-usuario/eProbe",

    "permissions": ["activeTab", "storage", "tabs", "clipboardWrite"],

    "host_permissions": [
        "https://eproc1g.tjsc.jus.br/*",
        "https://eproc2g.tjsc.jus.br/*",
        "https://fonts.googleapis.com/*",
        "https://fonts.gstatic.com/*"
    ],

    "content_scripts": [
        {
            "matches": [
                "https://eproc1g.tjsc.jus.br/*",
                "https://eproc2g.tjsc.jus.br/*"
            ],
            "js": ["src/main.js"],
            "run_at": "document_end"
        }
    ],

    "action": {
        "default_popup": "src/popup.html",
        "default_title": "eProbe - Automação ePROC"
    },

    "icons": {
        "16": "src/icon16.png",
        "48": "src/icon48.png",
        "128": "src/icon128.png"
    },

    "web_accessible_resources": [
        {
            "resources": ["src/icons.css"],
            "matches": [
                "https://eproc1g.tjsc.jus.br/*",
                "https://eproc2g.tjsc.jus.br/*"
            ]
        }
    ],

    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}
